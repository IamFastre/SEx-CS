{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "windows":{ "args": [ "build", "${workspaceFolder}/Windows.csproj" ] },
            "linux": { "args": [ "build", "${workspaceFolder}/Linux.csproj" ] },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "publish",
            "type": "shell",
            "windows":{
                "command": "${workspaceFolder}/publish.cmd"
            },
            "linux":{
                "command": "${workspaceFolder}/publish.sh"
            },
            "problemMatcher": "$msCompile",
        }
    ]
}